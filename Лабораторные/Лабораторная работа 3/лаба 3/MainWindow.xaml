<Window x:Class="WpfLab6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lab6" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="5">
            <GroupBox Header="Существительные">
                <ListBox x:Name="ListNouns"/>
            </GroupBox>

            <GroupBox Header="Глаголы" Margin="0,10,0,0">
                <ComboBox x:Name="ComboVerbs"/>
            </GroupBox>

            <TextBox x:Name="EditBox" Margin="0,10,0,0" PreviewTextInput="EditBox_PreviewTextInput"/>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button x:Name="BtnAdd" Content="Добавить" Click="BtnAdd_Click"/>
                <Button x:Name="BtnEdit" Content="Изменить" Margin="10,0,0,0" Click="BtnEdit_Click"/>
                <Button x:Name="BtnRemove" Content="{Binding ElementName=ListNouns, Path=SelectedItem}" Margin="10,0,0,0" Click="BtnRemove_Click"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="10">
            <Label Content="Построенная фраза:"/>
            <ScrollViewer Height="200">
                <Label x:Name="PhraseLabel"/>
            </ScrollViewer>
            <Button Content="Построить" Margin="0,10,0,0" Click="Build_Click"/>
        </StackPanel>
    </Grid>
</Window>
