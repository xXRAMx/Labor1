<Window x:Class="WpfLab7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lab7" Height="500" Width="900">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <Canvas x:Name="MyCanvas" Height="300" Background="#EEEEEE">

                <Rectangle x:Name="MyRect"
                           Width="120"
                           Height="80"
                           Canvas.Left="30"
                           Canvas.Top="40"
                           Stroke="Black"
                           StrokeThickness="3">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="LightBlue" Offset="0"/>
                            <GradientStop Color="Blue" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <Polyline x:Name="MyPoly"
                          Stroke="Red"
                          StrokeThickness="3"
                          StrokeDashArray="4 2"
                          Points="10,150 60,200 120,160 180,220"/>
            </Canvas>

            <Button Content="Повернуть Polyline"
                    Click="Rotate_Click"
                    Margin="0,10,0,0"/>
        </StackPanel>

        <Viewbox Grid.Column="1" Margin="10">
            <Canvas Width="300" Height="300">
                <Path x:Name="ComplexPath"
                      Stroke="Black"
                      StrokeThickness="2"
                      Fill="LightGreen">
                    <Path.Data>
                        <GeometryGroup>
                            <EllipseGeometry Center="100,100"
                                             RadiusX="60"
                                             RadiusY="40"/>
                            <RectangleGeometry Rect="70,80 60 40"/>
                        </GeometryGroup>
                    </Path.Data>
                </Path>
            </Canvas>
        </Viewbox>

    </Grid>
</Window>
